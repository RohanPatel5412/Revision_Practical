<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoopExampleActivity"
    android:orientation="vertical"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10sdp">

        <EditText
            android:id="@+id/edtValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Value"
            android:textAlignment="center"
            android:inputType="number"
            android:textSize="@dimen/_17sdp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btnCheckLoop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Loop Result"
            android:textAlignment="center"
            android:textSize="@dimen/_12sdp"
            android:layout_margin="@dimen/_5sdp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btnCheckNestedLoop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Nested Loop Result"
            android:textAlignment="center"
            android:textSize="@dimen/_12sdp"
            android:layout_margin="@dimen/_5sdp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btnCheckNumberLoop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Number Loop Result"
            android:textAlignment="center"
            android:textSize="@dimen/_12sdp"
            android:layout_margin="@dimen/_5sdp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tvAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Answer"
            android:textSize="@dimen/_17sdp" />


    </LinearLayout>


</LinearLayout>